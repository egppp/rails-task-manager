<h2><%= @task.title %></h2>

<p><%= @task.details %></p>
<% if @task.completed %>
<img src="data:image/svg+xml;base64," width="12px" alt=""/><p>This task is completed</p>
<% else  %>
<img src="data:image/svg+xml;base64," width="12px" alt=""/><p>This task is not completed yet</p>
<% end %>

<%= link_to "Edit #{@task.title}", edit_task_path(@task)%>

<%= link_to "Delete #{@task.title}", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>

<div><%= link_to("Back to all tasks", tasks_path) %></div>

